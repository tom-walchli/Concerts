<table>
	<tr class="index__tr">
		<th>Artist</th>
		<th>Venue</th>
		<th>Date</th>
		<th>Description</th>
		<th>City</th>
		<th>Price</th>
	</tr>

	<% @gigs.each do |g|  %>
		<tr class="index__tr">
			<td><%= link_to(g.artist, gig_path(g)) %></td>
			<td><%= "#{g.venue}" %> </td>
			<td><%= "#{g.date}" %></td>
 			<td><%= "#{g.description}" %></td>
			<td><%= "#{g.city}" %></td>
			<td>$<%= "#{'%.2f' % g.price}" %></td>
		</tr>
	<% end %>
</table>
