<% if flash[:notice] %>
	<%= flash[:notice] %>
<% end %>

<% if @gig.errors.any? %>
	<ul>
		<% @gig.errors.full_messages.each do |msg| %>
			<li style="color:red"><%= msg%></li>
		<% end %>
	</ul>
<% end %>

<%= form_for [@gig] do |f| %>
	<%= f.label :artist %>
	<%= f.text_field :artist %>
	<br>
	<%= f.label :venue %>
	<%= f.text_field :venue %>
	<br>
	<%= f.label :date %>
	<%= f.date_field :date %>
	<br>
	<%= f.label :city %>
	<%= f.text_field :city %>
	<br>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<br>
	<%= f.label :price %>
	<%= f.text_field :price %>
	<br>
	<%= f.submit 'Save' %>
<% end %>
<%= link_to('Cancel', gigs_path) %>
<% %>